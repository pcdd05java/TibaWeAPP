<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classzone.PhoneBookActivity"
    android:orientation="vertical"
    android:background="@drawable/drawback">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <TextView
        android:id="@+id/teacher_deafult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:textSize="20dp"
        android:text="@string/text_teacher_deafult"
        android:gravity="center"
        android:textColor="@color/colorDarkBlue"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvpbClass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="7dp"
            android:textSize="17dp"
            android:gravity="end"
            android:textColor="@color/colorDarkBlue" />
        <TextView
            android:id="@+id/phonebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginVertical="7dp"
            android:textSize="17dp"
            android:text="　班級通訊錄"
            android:gravity="start"
            android:textColor="@color/colorDarkBlue" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPhonebook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="3dp"
        android:scrollbars="vertical" />



</LinearLayout>