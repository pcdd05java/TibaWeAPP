<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cvLatestNews="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/cvLatestNews"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="5dp"
    cvLatestNews:cardElevation="2dp"
    cvLatestNews:cardCornerRadius="2dp">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cvtvNewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="20dp"
            android:textColor="@color/colorDarkBlue"
            android:text="標題1" />
        <TextView
            android:id="@+id/cvtvNewsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="15dp"
            android:text="2019-05-05"
            android:layout_gravity="end"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkBlue"
        android:layout_marginHorizontal="8dp"/>

    <TextView
            android:id="@+id/cvtvNewsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="17dp"
            android:text="內容1" />


</LinearLayout>

</android.support.v7.widget.CardView>